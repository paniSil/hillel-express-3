<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>

<body>

    <div class="container">

        <h1 class="mt-4">
            <%= title %>
        </h1>

        <div>
            <a class="btn btn-outline-primary btn-sm" href="/">To Main Page</a>
        </div>

        <% if (articles.length===0) { %>
            <div>
                No articles yet.
            </div>
            <% } else { %>
                <ul class="flex-column p-0 type-none">
                    <% articles.forEach(function(article) { %>
                        <li class="card mt-2">
                            <div class="card-body">
                                <h2>
                                    <%= article.title %>
                                </h2>
                                <div>
                                    <%= article.text %>
                                </div>
                                <div>
                                    <a class="btn btn-primary ml-1 mt-3" href="/articles/<%= article.id %>">read</a>
                                </div>
                            </div>
                        </li>
                        <% }); %>
                </ul>
                <% } %>
    </div>

</body>

</html>